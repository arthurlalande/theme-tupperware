<div class="product-form-reassurance">
    {% for i in (1..3) %}
        <div class="product-form-reassurance__item">
            {% if block.settings.image-i != blank %}
            {{ block.settings.image-i | image_url: height: 30 | image_tag: class: 'product-form-reassurance__item-icon' }}
            {% else %}
                {{ 'product-1' | placeholder_svg_tag: 'product-form-reassurance__item-icon' }}
            {% endif %}
            <div class="product-form-reassurance__item-content">
                <div class="product-form-reassurance__item-title">{{ block.settings.heading-i }}</div>
                <div class="product-form-reassurance__item-text">{{ block.settings.text-i }}</div>
            </div>
        </div>
    {% endfor %}
</div>

{% stylesheet %}
  .product-form-reassurance {
    display: flex;
    gap: 10px;
    padding: 20px 10px;
  }
  .product-form-reassurance__item {
    display: flex;
    gap: 10px;
  }
  .product-form-reassurance__item-icon {
    height: 15px;
    width: auto;
  }
  .product-form-reassurance__item-content {
    font-size: 11px;
    line-height: 1.2;
  }
  .product-form-reassurance__item-title {
    font-weight: 600;
  }
{% endstylesheet %}